<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal"
    tools:context="com.deepshooter.simplepresenterapp.login.LoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:background="@drawable/editext_background"
        android:hint="Enter Your Email"
        android:id="@+id/vE_emailEditText"
        android:maxLength="100"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="143dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:background="@drawable/editext_background"
        android:hint="Enter Your Password"
        android:id="@+id/vE_passwordEditText"
        android:maxLength="100"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/vE_emailEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@color/yellow_dark"
        android:text="SUBMIT"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:id="@+id/vT_sA_submit"
        android:layout_below="@+id/vE_passwordEditText"
        android:layout_alignLeft="@+id/vE_passwordEditText"
        android:layout_alignStart="@+id/vE_passwordEditText"/>


</RelativeLayout>
